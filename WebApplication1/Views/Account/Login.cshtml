@model DapperDashboard.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null; // This page doesn't use the main layout
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-lg shadow-md">
            <div>
                <h2 class="mt-6 text-center text-3xl font-bold text-gray-900">
                    Sign in to your account
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    (Use: customer@example.com / Password123!)
                </p>
            </div>

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "mt-8 space-y-6" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-red-600 text-sm" })

                <div class="rounded-md shadow-sm -space-y-px">
                    <div>
                        @Html.TextBoxFor(m => m.Username, new { @class = "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder = "Username (customer@example.com)" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-red-600 text-xs px-1" })
                    </div>
                    <div>
                        @Html.PasswordFor(m => m.Password, new { @class = "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder = "Password (Password123!)" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-red-600 text-xs px-1" })
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" })
                        @Html.LabelFor(m => m.RememberMe, "Remember me", new { @class = "ml-2 block text-sm text-gray-900" })
                    </div>
                </div>

                <div>
                    <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Sign in
                    </button>
                </div>
            }
        </div>
    </div>
</body>
</html>